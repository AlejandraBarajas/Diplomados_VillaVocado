@model IEnumerable<Diplomados_VillaVocado.Models.Diplomado>

@{
    ViewData["Title"] = "Diplomados Disponibles";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h2 class="text-success">
            <i class="fas fa-graduation-cap"></i> Diplomados Disponibles
        </h2>
        <p class="text-muted">Explora nuestros programas de formación profesional</p>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @ViewBag.Error
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No hay diplomados disponibles en este momento.
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var diplomado in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <div class="mb-3">
                            <span class="badge bg-success">
                                <i class="fas fa-calendar-alt"></i>
                                Del @diplomado.FechaInicio.ToString("dd/MM/yyyy")
                                al @diplomado.FechaFin.ToString("dd/MM/yyyy")
                            </span>
                        </div>

                        <h5 class="card-title text-success fw-bold">@diplomado.Nombre</h5>

                        @if (!string.IsNullOrEmpty(diplomado.Descripcion))
                        {
                            <p class="card-text flex-grow-1">@diplomado.Descripcion</p>
                        }

                        <div class="mt-auto">
                            @if (diplomado.Materias != null && diplomado.Materias.Any())
                            {
                                <div class="mb-3">
                                    <small class="text-muted">
                                        <i class="fas fa-book"></i>
                                        <strong>@diplomado.Materias.Count</strong> materias
                                    </small>
                                </div>
                            }

                            <div class="d-grid gap-2">
                                <a href="@Url.Action("Details", "Diplomados", new { id = diplomado.Id })"
                                   class="btn btn-outline-success btn-sm">
                                    <i class="fas fa-eye"></i> Ver Detalles
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
