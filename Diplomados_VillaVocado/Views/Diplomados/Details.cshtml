@model Diplomados_VillaVocado.Models.Diplomado

@{
    ViewData["Title"] = "Detalles del Diplomado";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h2 class="text-success">
            <i class="fas fa-graduation-cap"></i> @Model.Nombre
        </h2>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title text-success">
                    <i class="fas fa-info-circle"></i> Información General
                </h5>
                
                @if (!string.IsNullOrEmpty(Model.Descripcion))
                {
                    <p class="card-text">@Model.Descripcion</p>
                }
                
                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <strong><i class="fas fa-calendar-plus"></i> Fecha de Inicio:</strong>
                            <p class="text-muted">@Model.FechaInicio.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <strong><i class="fas fa-calendar-check"></i> Fecha de Fin:</strong>
                            <p class="text-muted">@Model.FechaFin.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                </div>
                
                @if (Model.Materias != null && Model.Materias.Any())
                {
                    <hr class="my-4">
                    
                    <h5 class="text-success mb-3">
                        <i class="fas fa-list"></i> Materias del Diplomado
                    </h5>
                    
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-success">
                                <tr>
                                    <th>#</th>
                                    <th>Materia</th>
                                    <th>Descripción</th>
                                    <th><i class="fas fa-clock"></i> Duración</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var materia in Model.Materias.OrderBy(m => m.Orden))
                                {
                                    <tr>
                                        <td><span class="badge bg-success">@materia.Orden</span></td>
                                        <td><strong>@materia.Nombre</strong></td>
                                        <td>@(materia.Descripcion ?? "Sin descripción")</td>
                                        <td>@materia.DuracionHoras hrs</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    var totalHoras = Model.Materias.Sum(m => m.DuracionHoras);
                    <div class="alert alert-info mt-3">
                        <strong><i class="fas fa-clock"></i> Duración Total:</strong> @totalHoras horas
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title text-success">
                    <i class="fas fa-user-graduate"></i> Inscripción
                </h5>
                
                <div class="alert alert-primary">
                    <i class="fas fa-info-circle"></i> 
                    ¿Interesado en este diplomado?
                </div>
                
                @if (ViewContext.HttpContext.Session.GetInt32("UsuarioId") != null)
                {
                    <form method="post" asp-action="Inscribir" asp-route-id="@Model.Id">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-success w-100 btn-lg">
                            <i class="fas fa-user-plus"></i> Inscribirme
                        </button>
                    </form>
                }
                else
                {
                    <a href="@Url.Action("Login", "Account")" class="btn btn-success w-100 btn-lg">
                        <i class="fas fa-sign-in-alt"></i> Iniciar Sesión para Inscribirse
                    </a>
                }
                
                <div class="mt-4">
                    <a href="@Url.Action("Disponibles", "Diplomados")" class="btn btn-outline-secondary w-100">
                        <i class="fas fa-arrow-left"></i> Volver
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>